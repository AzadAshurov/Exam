@using ExamProject.Areas.Admin.ViewModels.Profession
@model List<GetProfessionVM>

@{
     int id = 0;
}



<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Professions</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Actions</th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var prof in Model){
                            id++; 
                            <tr>
                            <td>@id</td>
                            <td>@prof.Name</td>
                            <td>
                                    <a asp-action="update" asp-controller="profession" asp-route-id="@prof.Id" class="btn btn-warning"><i class="mdi mdi-cached"> </i></a>
                                    <a asp-action="delete" asp-controller="profession" asp-route-id="@prof.Id" class="btn btn-danger"><i class="mdi mdi-close-box"> </i></a>
                                    <a asp-action="details" asp-controller="profession" asp-route-id="@prof.Id" class="btn btn-info"><i class="mdi mdi-notification-clear-all"> </i></a>
                            </td>
                        </tr>
                        }
                    </tbody>

                    <h4> Create new</h4>
                    <a asp-action="create" asp-controller="profession"  class="btn btn-primary"><i class="mdi mdi-border-color"> </i></a>
                </table>
            </div>
        </div>
    </div>
</div>