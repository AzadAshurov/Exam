@{
    Layout = null;
}
@using ExamProject.ViewModels
@model RegisterVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>
            <p class="card-description">
                Create Acc
            </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Name" >Name</label>
                    <input asp-for="Name" type="text" class="form-control"  placeholder="Name">
                    <span asp-validation-for="Name"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Surname</label>
                    <input asp-for="Surname" type="text" class="form-control"  placeholder="Surname">
                    <span asp-validation-for="Name"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" >Email</label>
                    <input asp-for="Email" as type="text" class="form-control"  placeholder="Email">
                    <span asp-validation-for="Email"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName" >UserName</label>
                    <input asp-for="UserName" as type="text" class="form-control"  placeholder="UserName">
                    <span asp-validation-for="UserName"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" >Password</label>
                    <input asp-for="Password" as type="text" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password"> </span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>